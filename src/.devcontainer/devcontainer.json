{
  "name": "BrothersTileProject",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "forwardPorts": [5000, 5500],

  "portsAttributes": {
    "5000": {
      "label": "Flask Contact API",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5500": {
      "label": "Frontend",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    }
  },
  "postCreateCommand": "pip install -r requirements.txt",

  "postStartCommand": "cd /src/backend/python && python contact.py"

}