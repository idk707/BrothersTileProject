{
  "name": "BrothersTileProject",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "forwardPorts": [5000, 5500],

  "portsAttributes": {
    "5000": {
      "label": "Flask API",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5500": {
      "label": "Frontend",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    }
  },

  // Run this only once when the container is created
  "postCreateCommand": "pip install -r src/backend/requirements.txt",

  // Run this every time the container starts
  "postStartCommand": "cd src/backend/python && python contact.py",

  "remoteEnv": {
    // These will come from your .env file, which you keep out of Git
    "EMAIL_USER": "${localEnv:EMAIL_USER}",
    "EMAIL_PASS": "${localEnv:EMAIL_PASS}"
  },

  "workspaceFolder": "/workspaces/BrothersTileProject"
}